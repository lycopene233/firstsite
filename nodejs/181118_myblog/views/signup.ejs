<%- include('header') %>

<div class="ui grid">
  <div class="four wide column"></div>
  <div class="eight wide column">
    <form class="ui form segment" method="post" enctype="multipart/form-data">
      <div class="field required">
        <label>ニックネーム</label>
        <input placeholder="ニックネーム" type="text" name="name">
      </div>
      <div class="field required">
        <label>パスワード</label>
        <input placeholder="パスワード" type="password" name="password">
      </div>
      <div class="field required">
        <label>パスワード確認</label>
        <input placeholder="パスワード確認" type="password" name="repassword">
      </div>
      <div class="field required">
        <label>性别</label>
        <select class="ui compact selection dropdown" name="gender">
          <option value="m">男</option>
          <option value="f">女</option>
          <option value="x">秘密</option>
        </select>
      </div>
      <div class="field required">
        <label>プロフィール画像</label>
        <input type="file" name="avatar">
      </div>
      <div class="field required">
        <label>自己紹介文</label>
        <textarea name="bio" rows="5"></textarea>
      </div>
      <input type="submit" class="ui button fluid" value="新規登録">
    </form>
  </div>
</div>

<%- include('footer') %>
